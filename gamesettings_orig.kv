<Gamex01SettingsScreen>:
    #slider_setperlegs_count: slider_setperleg.value
    #slider_sets_count: slider_sets.value
    #jatek_tipus: str(variant_id.text)
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: 1
            orientation: "horizontal"
            Label:
                text: "Player 1"
                italic: True
                outline_color: (1,0,1)
            MyTextInput:
                id: player1_id
                multiline: False
                write_tab: False
                focus: True
                #input_type: 'number'
                hint_text: "Player 1 name"
                background_color: 1,1,0,1
                foreground_color: 1,0,0,1

                #text: root.on_text
                on_text_validate: player2_id.focus = True
                on_text:
                    root.Player1Change()
                    #root.on_text
        BoxLayout:
            size_hint_y: 1
            orientation: "horizontal"
            Label:
                text: "Player 2"
            MyTextInput:
                id: player2_id
                multiline: False
                write_tab: False
                #input_type: 'number'
                hint_text: "Player 2 name or blank"
                #text: "Opponent (or blank)"
                #text: str(root.slider_sets_count)
                on_text: root.Player2Change()
                on_text_validate: player1_id.focus = True

        BoxLayout:
            size_hint_y: 1
            orientation: "vertical"
            Label:
                text: "Leave Player 2 blank for single player"
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x:3
                Label:
                    size_hint_x: 1
                    text: "Variant"
                    halign: "right"
                Label:
                    size_hint_x:1
                    id: variant_id
                    halign: "left"
                    #text: root.jatek_tipus
                Label:
                    size_hint_x:3
        BoxLayout:
            size_hint_y: 1
            orientation: "horizontal"
            Button:
                id: button_301
                text: "301"
                on_release: root.GameTypeChange(301)
            Button:
                id: button_401
                text: "401"
                on_release: root.GameTypeChange(401)
            Button:
                id: button_501
                text: "501"
                on_release:
                    root.GameTypeChange(501)
                    #root.idk_kiirasa()
            Button:
                id: button_701
                text: "701"
                on_release: root.GameTypeChange(701)
        BoxLayout:
            size_hint_y:1
        BoxLayout:
            size_hint_y: 3
            orientation: "vertical"
            Label:
                id: slider_setperleg_label
                #text: "Leg per Sets:" + str(root.slider_setperlegs_count)
            Slider:
                id: slider_setperleg
                min:1
                max:5
                step: 1
                on_value: root.slider_setperlegs_change()
            Label:
                id: slider_sets_label
                #text: "Sets count:" + str(root.slider_sets_count)
            Slider:
                id: slider_sets
                min: 1
                max: 15
                step: 1
                on_value: root.slider_sets_change()
        BoxLayout:
            size_hint_y:1
        BoxLayout:
            orientation: "horizontal"
            size_hint_y:1
            #Button:
                #text: "SAVE"
                #on_release: root.PressSaveButton()
            Button:
                text: "Reset"
                on_release: root.PressResetButton()
        BoxLayout:
            size_hint_y:1
        BoxLayout:
            id: button_network_settings
            size_hint_y: 2
            orientation: "horizontal"
            Button:
                id: button_network_settings
                text: "Network Settings"
                on_release:
                    root.manager.transition.direction="right"
                    root.manager.current = 'networksettings'
            Button:
                id: button_game_settings
                text: "Game Settings"
                disabled: True
            Button:
                id: button_game_on
                text: "Game On"
                on_release:
                    root.manager.transition.direction="left"
                    root.manager.current = 'gameon'

